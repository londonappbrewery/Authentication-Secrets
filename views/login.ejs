<%- include('partials/header') %>
<link rel="stylesheet" href="css/login.css">
</head>

<body>
<div class="jumbotron">
  
  <div class="container mt-5">
    <h1 class="display-3">Login</h1>
    
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" onkeypress="this.style.width = ((this.value.length + 5) * 8) + 'px';" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" onkeypress="this.style.width = ((this.value.length + 5) * 8) + 'px';" name="password">
              </div>
              <button type="submit" class="btn btn-dark">Login</button>
            </form>
            
          </div>
        </div>
      </div>
      
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>
  
  <%- include('partials/footer') %>
  